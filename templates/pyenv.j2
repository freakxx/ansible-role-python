#!/usr/bin/env bash

PYENV="{{ fubarhouse_user_dir }}/{{ fubarhouse_python.main_dir }}/libexec/{{ fubarhouse_python.main_exec }}";

PROFILES=(".profile" ".bashrc" ".bash_profile");
for PROFILE in "${PROFILES[@]}"; do
  if [[ -n $(cat "$HOME/${PROFILE}" | grep "pyenv init -") ]]; then
    echo;
  else
    echo 'eval "$(${PYENV} init -)"' >> ~/"${PROFILE}";
  fi
done

$PYENV $@;

